<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="HardcodedText,contentDescription"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="40dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:contentDescription="Product Banner"
                    android:src="@drawable/fruit_banner"
                    android:scaleType="centerCrop">
            </ImageView>
            <TextView
                    android:layout_width="match_parent"
                    android:text="Farm Produce"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="45sp"
                    android:fontFamily="@font/kanit_bold"
                    android:textColor="#C82929"
                    android:layout_height="wrap_content">

            </TextView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Category"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed">
            </TextView>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#7316B5"
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/viewCategories"
                    android:text="View all >">

            </TextView>
        </LinearLayout>
        <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fruitsCategory"
                            app:cardCornerRadius="50dp"
                            android:layout_margin="10dp">
                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/fruit_cat_icon"
                                android:contentDescription="Fruits Category"
                                android:scaleType="centerCrop">
                        </ImageView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fruits"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-condensed">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="50dp"
                            android:id="@+id/vegetablesCategory"
                            android:layout_margin="10dp">
                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/veg_cat_icon"
                                android:contentDescription="Vegetables Category"
                                android:scaleType="centerCrop">
                        </ImageView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vegetables"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-condensed">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/seedsCategory"
                            app:cardCornerRadius="50dp"
                            android:layout_margin="10dp">
                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/seeds_cat_icon"
                                android:contentDescription="Seeds Category"
                                android:scaleType="centerCrop">
                        </ImageView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seeds"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-condensed">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/equipmentsCategory"
                            app:cardCornerRadius="50dp"
                            android:layout_margin="10dp">
                        <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/equipments_cat_icon"
                                android:contentDescription="Equipments Category"
                                android:scaleType="centerCrop">
                        </ImageView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Equipments"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-condensed">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Featured Products"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed">
        </TextView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/freshFruitsBasket"
                        android:layout_marginHorizontal="15dp"
                        app:cardElevation="8dp"
                        style="@style/Widget.Material3.CardView.Elevated"
                        app:cardCornerRadius="20dp"
                        android:layout_weight="1">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:id="@+id/freshFruitsBasketImage"
                            android:src="@drawable/fruit_prod"
                            android:scaleType="centerCrop"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fruits Basket"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_margin="12dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="Price: $20"
                            android:textStyle="bold"
                            android:textColor="#FF0000"
                            android:layout_marginHorizontal="12dp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:orientation="vertical">
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add to cart"
                                    app:icon="@drawable/baseline_add_shopping_cart_24"
                                    style="?attr/borderlessButtonStyle"
                            />
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Buy Now"
                            />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:id="@+id/freshVegBasket"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_weight="1">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:id="@+id/freshVegBasketImage"
                                android:src="@drawable/veg_prod"
                                android:background="#FECC41"
                                android:scaleType="centerCrop"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fresh Veg Basket"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_margin="12dp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="Price: $15"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:layout_marginHorizontal="12dp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:orientation="vertical">
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add to cart"
                                    app:icon="@drawable/baseline_add_shopping_cart_24"
                                    style="?attr/borderlessButtonStyle"
                            />
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Buy Now"
                            />
                        </LinearLayout>
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        app:cardElevation="8dp"
                        android:id="@+id/freshMeatCombo"
                        style="@style/Widget.Material3.CardView.Elevated"
                        app:cardCornerRadius="20dp"
                        android:layout_weight="1">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:id="@+id/freshMeatComboImage"
                                android:src="@drawable/meat_prod"
                                android:background="#FECC41"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meat Combo"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_margin="12dp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="Price: $30"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:layout_marginHorizontal="12dp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:orientation="vertical">
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add to cart"
                                    app:icon="@drawable/baseline_add_shopping_cart_24"
                                    style="?attr/borderlessButtonStyle"
                            />
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Buy Now"
                            />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        app:cardElevation="8dp"
                        android:id="@+id/seedsCombo"
                        app:cardCornerRadius="20dp"
                        android:layout_weight="1">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:id="@+id/seedsComboImage"
                                android:src="@drawable/fruit_prod"
                                android:scaleType="centerCrop">
                        </ImageView>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seeds Combo"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_margin="12dp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="Price: $50"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:layout_marginHorizontal="12dp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:orientation="vertical">
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add to cart"
                                    app:icon="@drawable/baseline_add_shopping_cart_24"
                                    style="?attr/borderlessButtonStyle"
                            />
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Buy Now"
                            />
                        </LinearLayout>
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:id="@+id/freshDairyCombo"
                        app:cardElevation="8dp"
                        style="@style/Widget.Material3.CardView.Elevated"
                        app:cardCornerRadius="20dp"
                        android:layout_weight="1">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:id="@+id/freshDairyComboImage"
                                android:src="@drawable/dairy_prod"
                                android:scaleType="centerCrop"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fresh Dairy Combo"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:layout_margin="12dp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="Price: $35"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:layout_marginHorizontal="12dp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:orientation="vertical">
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add to cart"
                                    app:icon="@drawable/baseline_add_shopping_cart_24"
                                    style="?attr/borderlessButtonStyle"
                            />
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Buy Now"
                            />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        app:cardElevation="8dp"
                        android:id="@+id/gardenEquipmentsCombo"
                        app:cardCornerRadius="20dp"
                        android:layout_weight="1">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:id="@+id/gardenEquipmentsComboImage"
                                android:src="@drawable/garden_eqmnt_prod"
                                android:background="#FECC41"
                                android:scaleType="centerCrop"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Garden Equipments Combo"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_margin="12dp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="Price: $70"
                                android:textStyle="bold"
                                android:textColor="#FF0000"
                                android:layout_marginHorizontal="12dp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:gravity="center"
                                android:orientation="vertical">
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add to cart"
                                    app:icon="@drawable/baseline_add_shopping_cart_24"
                                    style="?attr/borderlessButtonStyle"
                            />
                            <com.google.android.material.button.MaterialButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Buy Now"
                            />
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>